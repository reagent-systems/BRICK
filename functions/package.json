{
  "name": "brick-functions",
  "description": "BRICK Cloud Functions for Stripe payments and credit management",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^13.0.0",
    "firebase-functions": "^6.3.0",
    "stripe": "^17.0.0"
  },
  "devDependencies": {
    "typescript": "~5.8.0"
  }
}
